<Application
    x:Class="DevTools.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DevTools.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Startup="Application_Startup"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/Syncfusion.Tools.WPF;component/Framework/Ribbon/Themes/MetroStyle.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <Style
                x:Key="RibbonStyle1"
                BasedOn="{StaticResource MetroRibbonStyle}"
                TargetType="{x:Type syncfusion:Ribbon}">

                <Setter Property="FontSize" Value="19" />

            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
